        <%- include('admin_header') %>

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Deshbord /</span> My Profile</h4>

              <div class="row">
                  <div class="card mb-4">
                    <h5 class="card-header">Profile Details</h5>
                    <!-- Account -->
                    <div class="card-body">
                      <div class="d-flex align-items-start align-items-sm-center gap-4">
                        <a href="<%= locals.user.image %>"><img
                          src="<%= locals.user.image %>"
                          alt="user-avatar"
                          class="d-block rounded"
                          height="150"
                          width="150"
                          id="uploadedAvatar"
                        /></a>
                      </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                      <form id="formAccountSettings" method="POST" onsubmit="return false">
                        <div class="row">
                          <div class="mb-3 col-md-6">
                            <label for="firstName" class="form-label">Username</label>
                            <div
                              class="form-control"
                            ><%= locals.user.username %></div>
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="email" class="form-label">E-mail</label>
                            <div
                              class="form-control"
                            ><%= locals.user.email %></div>
                          </div>
                          <div class="mb-3 col-md-6">
                            <label class="form-label" for="phoneNumber">Phone Number</label>
                            <div class="input-group input-group-merge">
                              <span class="input-group-text">In (+91)</span>
                              <div
                                class="form-control"
                              ><%= locals.user.phone %></div>
                            </div>
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="address" class="form-label">Address</label>
                            <div class="form-control"><%= locals.user.address %></div>
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="state" class="form-label">State</label>
                            <div class="form-control"><%= locals.user.state %></div>
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="zipCode" class="form-label">Zip Code</label>
                            <div
                              class="form-control"
                            ><%= locals.user.zip %></div>
                          </div>
                        </div>
                      </form>
                      <a href="/admin/edit" style="text-align:center; display:inline-block; border:1px solid; padding: 10px 20px;">Edit Profile</a>
                      <a href="/admin/changepass" style="text-align:center; display:inline-block; border:1px solid; padding: 10px 20px;">Change Password</a>
                    </div>
                    <!-- /Account -->
                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->
            <%- include('admin_footer') %>